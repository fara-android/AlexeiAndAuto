<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".AutoActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="12dp"/>
    <ImageView
        android:id="@+id/car"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/car"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exit"/>
    <TextView
        android:id="@+id/grand_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Service"
        android:textSize="28sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/car"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="24dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@color/gray"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/grand_id">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginLeft="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Услуги:"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Развал схождения"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Токарь"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"
                android:padding="8dp"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Аргонная сварка"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Комп. диагностика"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="center|start"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Ремонт ходовой"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Ремонт инжектора"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"/>
            <TextView
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:background="@drawable/button_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="24dp"
                android:text="Услуги моториста"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:gravity="start|center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Позвоните нам!"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>